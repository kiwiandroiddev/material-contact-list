<resources>

    <style name="Theme.ContactsApp" parent="Base.Theme.ContactsApp">
    </style>

    <style name="Base.Theme.ContactsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MaterialListTextPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="MaterialListTextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="MaterialListRowLayout">
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:minHeight">@dimen/material_list_row_height</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>
